<!DOCTYPE html>

<html lang="en" dir="ltr">
  <head>
    <link rel="stylesheet" href="stylesheets/main.css">
    <script type="text/javascript" src="js/main.js" defer></script>
    <meta charset="utf-8">

  </head>

        <body style="margin: 0;">

          <!-- <header id="site-header"></header> -->
          <!-- <h3 id = "date"></h3> -->
          <header id="mainheader">

            <ul>
            <li><a class="active" href="/main">Home</a></li>
            <li><a href="/inventory">Inventory</a></li>
            <li><a href="/chat">Chatroom</a></li>
            <li><a href="/quiz">Quiz</a></li>
            <li><a href="/store">Store</a></li>
            <li><a href="/farmagatchi">Farmagatchi</a></li>
            <li><a href="/settings">Settings</a></li>
            <li><a href="/logout">Logout</a></li>
            </ul><br>
            <div class="userInfo">
              <div class="username">
                <img src="images/<%= character %>.jpg" alt="profilePic" class="profile-img">
                <span class="username-font" style="font-size:16px;font-family: Verdana;">Welcome back </span>
                <a href="/inventory" style="font-size:16px;font-family: Verdana;"><%= username %></a>
              </div
              ><div class="Coin">
                <span class="username-font">Coins: <%= coin %></span
                ><button name="submit" type="button" class="regButton" onclick="
              window.location.href='/checkin'">Get FREE coins</button>
            </div>
            <div style="clear:both;"></div>

            <!-- <div class="divLeft">
              <h4>Current Weather: </h4>
              <h3>City: <%= city %></h3>
              <h3>Weather: <%= weather %></h3>
              <h3>Temperature: <%= temperature %> ℃</h3>
                <img src="images/weatherTEMP.jpg" alt="weatherPic" style="width:128px;height:128px;padding-left:30px">
            </div> -->

            <div class="weather-gadget">
              <h4>Current Weather: </h4>
              <h3>City: <%= city %></h3>
              <div class="weather-div">
                <div class="weather-font">Weather: <%= weather %></div>
                <img src="<%= iconUrl %>" class="weather-icon">
              </div>
              <h3>Temperature: <%= temperature %> ℃</h3>
            </div>

            <div class="divLeft" style="display: inline-block;">
              <h2 id="timer1" style="margin-left: 70px;font-weight: bold;display: inline-block;"><%= time[0] %> </h2>
              <h2 id="timer2" style="margin-left: 40px;font-weight: bold;display: inline-block;"><%= time[1] %> </h2>
              <h2 id="timer3" style="margin-left: 40px;font-weight: bold;display: inline-block;"><%= time[2] %> </h2>
              <h2 id="timer4" style="margin-left: 30px;font-weight: bold;display: inline-block;"><%= time[3] %> </h2>
            </div>


            <br><br><br><br><br><br><br><br><br><br><br>

            <div class="divLeft">
              <img class="background" src="images/background.jpg" alt="farmPatch" >

              <img class="slot1" src="<%= imgs[0] %>" alt="farmPatch" <%= hidden[0] %>>
              <img class="slot2" src="<%= imgs[1] %>" alt="farmPatch" <%= hidden[1] %>>
              <img class="slot3" src="<%= imgs[2] %>" alt="farmPatch" <%= hidden[2] %>>
              <img class="slot4" src="<%= imgs[3] %>" alt="farmPatch" <%= hidden[3] %>>
              <br><br>


              <button type="button" <%= disable[0] %> name="plant1" class="plantButton1" onclick="
              window.location.href='/plantseed?patch=1'">Plant 1</button>
              <button type="button" <%= disable[1] %> name="plant2" class="plantButton" onclick="
              window.location.href='/plantseed?patch=2'">Plant 2</button>
              <button type="button" <%= disable[2] %> name="plant3" class="plantButton" onclick="
              window.location.href='/plantseed?patch=3'">Plant 3</button>
              <button type="button" <%= disable[3] %> name="plant4" class="plantButton" onclick="
              window.location.href='/plantseed?patch=4'">Plant 4</button>
              <br><br><br>

              <div>
                <button type="button" disabled name="harvest1" class="harvestButton1" onclick="
                window.location.href='/harvestplant?patch=1">Harvest 1</button>
                <button type="button" disabled name="harvest2" class="harvestButton" onclick="
                window.location.href='/harvestplant?patch=2">Harvest 2</button>
                <button type="button" disabled name="harvest3" class="harvestButton" onclick="
                window.location.href='/harvestplant?patch=3">Harvest 3</button>
                <button type="button" disabled name="harvest4" class="harvestButton" onclick="
                window.location.href='/harvestplant?patch=4">Harvest 4</button>
              </div>
            </div>





            <div style="clear:both;"></div>

            <div id="maindiv">
            </div>

            <b>

          </header>
          <footer id="site-footer"></footer>

        </body>
      </html>
